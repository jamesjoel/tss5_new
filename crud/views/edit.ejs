<div class="container">
    <h2>Edit Student Page</h2>
    <div class="row">
        <div class="col-md-4 offset-md-4">
        <form action="/edit" method="post">


            <input type="hidden" name="sid" value="<%= user._id %>" />
            <div class="form-group">
                <label>Full Name</label>
                <input value="<%= user.name %>" type="text" class="form-control" name="name"/>
            </div>
            <div class="form-group">
                <label>Age</label>
                <input type="text" value="<%= user.age %>" class="form-control" name="age"/>
            </div>
            <div class="form-group">
                <label>City</label>
                <select class="form-control" name="city">
                    <option>Select</option>
                    <% result.forEach(function(x){ 
                        if(x.name==user.city)
                        { %>
                            <option selected="selected"><%= x.name %></option>

                        <% }else{ %>
                            <option><%= x.name %></option>

                        <% }
                     }) %>
                </select>
            </div>
            <input type="submit" value="Update" class="btn btn-success"/>
        </div>
    </form>
    </div>
</div>