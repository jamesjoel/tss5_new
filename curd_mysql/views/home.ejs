<Div class="modal fade" id="addModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Add New Student</h2>
            </div>
            <div class="modal-body">
                <form action="/" method="post">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" name="name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Age</label>
                        <input type="text" name="age" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <select class="form-control" name="city">
                            <option>Select</option>
                            <option>Indore</option>
                            <option>Ujjain</option>
                            <option>Bhopal</option>
                            <option>Mumbai</option>
                        </select>

                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</Div>
<div class="container">

    <h3>View All Students</h3>
    <button data-toggle="modal" data-target="#addModal" class="btn btn-success mb-4">Add New</button>
    
    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>S.No.</th>
            <th>Name</th>
            <th>Age</th>
            <th>City</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        <% result.forEach(function(x, n){ %>
            <Tr>
                <td><%= n+1 %></td>
                <td><%= x.name %></td>
                <td><%= x.age %></td>
                <td><%= x.city %></td>
                <td><a href="/delete/<%= x.id %>" class="btn btn-danger btn-sm">Delete</a></td>
                <td><a href="/edit/<%= x.id %>" class="btn btn-info btn-sm">Edit</a></td>
            </Tr>
        <% }) %>
    </table>

</div>