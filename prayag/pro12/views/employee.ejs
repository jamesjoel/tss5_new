<div class="row">
    <div class="col-md-8 offset-md-2">
       <h2 class="text-center">Employee Table</h2>
        <table class="table table-hover table-bordered table-striped table-dark">
            <tr>
                
                <th>S.No</th>
                <th>Name</th>
                <th>Age</th>
                <th>Department</th>
                <th>City</th>
                <th>Delete</th>

            </tr>
            <% result.forEach(function(x,n){ %>
                
                <tr>
                    <td><%= n+1 %></td>
                    <td><%= x.name %></td>
                    <td><%= x.age %></td>
                    <td><%= x.department %></td>
                    <td><%= x.city %></td>
                    <td><a href="/delete/<%= x._id %>" class="btn btn-danger btn-sm">Delete</a></td>
                </tr>


            <% }) %>
        </table>

    </div>
</div>