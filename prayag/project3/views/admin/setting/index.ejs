<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/admin/setting" method="POST">
                <div class="card">
                    <div class="card-header">
                        <b>Change Password Setting</b>
                    </div>
                    <p class="text-center text-danger"><%= msg %></p>
                    <input type="hidden" name="id" value="<%= result._id %>">
                    <div class="card-body">
                            <div class="form-group">
                                <label>Current Password</label>
                                <input type="password" class="form-control" name="current_password">
                            </div>
                            <div class="form-group">
                                    <label>New Passowrd</label>
                                    <input type="password" class="form-control" name="password">
                            </div>
                            <div class="form-group">
                                    <label>Re-Enter New Password</label>
                                    <input type="password" class="form-control">
                            </div>
                    </div>
                    <div class="card-footer">
                    
                         <input type="submit" value="Change Password" class="btn btn-sm btn-success" >
                                
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>