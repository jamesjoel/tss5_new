<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center">
                All Product
            </h2>
            <table class="table table-hover table-dark table-stripped table-bordered">
                <tr>
                    <th>S.No</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Discount</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>

                <% result.forEach(function(product,index){ %>

                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= product.name %></td>
                        <td><%= product.price %></td>
                        <td><%= product.category %></td>
                         
                        <td><%= product.discount %></td>
                        <td><a href="/admin/product/edit?id=<%= product._id %>" class="btn btn-sm btn-success" >Edit</a></td>
                        <td><a href="/admin/product/delete?id=<%= product._id %>" class="btn btn-sm btn-danger">Delete</a></td>
                    </tr>

                <% }) %>

            </table>
        </div>
    </div>
</div>