<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center">
                All Category
            </h2>
            <table class="table table-hover table-dark table-stripped table-bordered">
                <tr>
                    <th>S.No</th>
                    <th>Category Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>

                <% result.forEach(function(category,index){ %>

                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= category.name %></td>
                        <td><a href="/admin/category/edit?id=<%= category._id %>" class="btn btn-success">Edit</a></td>
                        <td><a href="/admin/category/delete?id=<%= category._id %>" class="btn btn-danger btn-">Delete</a></td>
                    </tr>

                <% }) %>

            </table>
        </div>
    </div>
</div>