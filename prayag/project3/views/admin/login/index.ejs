<div class="container mt-4">

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/admin" method="POST">
                <p class="text-danger text-center">
                    <%= msg %>
                </p>
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Admin Login</h3>
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" value="admin" class="form-control" name="username">
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input type="text" value="admin" class="form-control" name="password">
                        </div>

                    </div>

                    <div class="card-footer">
                        <input type="submit" value="Admin Login" class="btn btn-success d-block mx-auto">
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>