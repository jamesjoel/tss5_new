<div class="jumbotron header-color">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">New Arrival</h1>
            <h4>Lorem ipsum dolor sit amet consectetur adipisicing elit.</h4>
            <button class="btn btn-my">Buy Now</button>
        </div>
        <div class="col-md-6 banner"></div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Awesome</h1>
        </div>
        
    </div>
    <div class="row">
        
        <% result.forEach(function(product){ 
            
            var d=product.price - product.price*product.discount/100;

            %>
            
            <div class="col-md-3 mb-4">
                <div class="card product-box">
                    <img class="card-img-top" height="245" src="product_image/<%= product.image %>" alt="Card image">
                    <div class="card-body">
                        <h4 class="card-title text-center my-0"><%= product.name %></h4>
                        <p class="card-text text-muted small-text my-0">MRP <del class="text-muted"><%= product.price %></del> </p>
                        <p class="card-text my-0">New Price &#8377; <%= d %> </p>
                        <a href="#" class="btn btn-primary">Detail</a>
                        <a href="/cart/add/<%= product._id %>" class="btn btn-primary btn-sm" >Add To Cart</a>
                    </div>
                </div>
            </div>

        <% }) %>
        
        
       
    </div>
</div>
