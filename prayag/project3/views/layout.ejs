                           <% menu_category.forEach(function(category){ %>
                            
                            <div class="dropdown-divider"></div>
                            <a href="/category/<%= category.name %>" class="dropdown-item"><%= category.name %></a>

                           <% }) %>
                            
                        </div>
                    </li>
                
                    <li class="nav-item">
                        <a href="/cart" class="nav-link">My Cart(<%= totalItem %>)</a>
                    </li>
                    
                        
                    
                </ul>
            </div>
