<div class="container mt-4">

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Edit Product</h2>
            <form action="/admin/product/edit" method="post">
                <input type="hidden" name="id" value="<%= product._id %>" />

                <div class="card">
                    <div class="card-header">
                        Edit Product Here
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Product Name</label>
                            <input type="text" value="<%= product.name %>" name="name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Product Category</label>
                            <select name="category" class="form-control">
                                <option>Select</option>
                                <% category.forEach(function(category){ 
                                    if(category._id == product.category){ %>
                                        <option selected="selected" value="<%= category._id %>"><%= category.name %></option>

                                   <% }else{ %>
                                        <option value="<%= category._id %>"><%= category.name %></option>

                                    <% 
                                }
                                    
                                 }) %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Product Detail</label>
                            <textarea class="form-control" name="detail"><%= product.detail %></textarea>
                        </div>
                        <div class="form-group">
                            <label>Product Price</label>
                            <input type="text" name="price" value="<%= product.price %>" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Discount</label>
                            <input type="text" name="discount" value="<%= product.discount %>" class="form-control" />
                        </div>

                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Update Product" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>