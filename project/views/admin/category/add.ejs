<div class="container mt-4">

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2><% if(result){ %>
            Update
            <% }else{ %>
            Add New
            <% } %> Category</h2>
            <form action="/admin/category/<% if(result){%>edit<%}else{%>add<%}%>" method="post">

                
                <div class="card">
                    <div class="card-header">
                        <% if(result){ %>
                            Update
                        <% }else{ %>
                            Add New
                        <% } %> Category Here
                    </div>
                    <input type="hidden" name="id" value="<% if(result){%><%=result._id %><%}%>" />
                    <div class="card-body">
                        <div class="form-group">
                            <label>Category Name</label>
                            <input type="text" value="<% if(result){%><%= result.name %><%} %>" name="name" class="form-control" />
                        </div>        
                        
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="<%if(result) { %> Update <% }else{ %> Add <%} %> Category" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>